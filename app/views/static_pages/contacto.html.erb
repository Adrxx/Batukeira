<% content_for :fixed_nav, 'scrolled fixed' %>
<section class="row contacto">
  <div class="fondo"></div>
  <div class="info">
    <div class="centrado-vertical">
      <h1 class="titulo">Contáctanos</h1>


    <% unless @prefs.facebook.empty? %>
      <div class="texto">Facebook:</div>
      <ul class="lista">
        <li><%= @prefs.facebook %></li>
      </ul>
    <% end %>

    <% unless @prefs.twitter.empty? %>
      <div class="texto">Twitter:</div>
      <ul class="lista">
        <li><%= @prefs.facebook %></li>
      </ul>
    <% end %>

    <% unless @prefs.email.empty? %>
      <div class="texto">Correo electrónico:</div>
      <ul class="lista">
        <li><%= @prefs.email %></li>
      </ul>
    <% end %>

    <% unless @prefs.telephone.empty? && @prefs.telephone2.empty? %>
      <div class="texto">Teléfono:</div>
      <ul class="lista">
       <% unless @prefs.telephone.empty? %>
        <li><a href="tel:<%= @prefs.telephone %>" class="telefono"><%= @prefs.telephone %></a></li>
       <% end %>
      <% unless @prefs.telephone2.empty? %>
        <li><a href="tel:<%= @prefs.telephone2 %>" class="telefono"><%= @prefs.telephone2 %></a></li>
       <% end %>
      </ul>
    <% end %>
    </div>
  </div>

  <div class="forma">
    <div class="centrado-vertical">
      <div class="titulo">Envíanos un mensaje.</div>
      <%= form_for @contact_model, :url => contact_send_mail_path, :method => :post do |f| %>
        <%= f.text_field :name, class: 'campo', placeholder: "Nombre" %>
        <%= f.text_field  :email,class: 'campo', placeholder: "Correo elecrónico" %>
        <%= f.text_field  :subject, class: 'campo', placeholder: "Asunto" %>
        <%= f.text_area  :message, class: 'campo area', placeholder: "Mensaje" %>
        <%= f.hidden_field :nickname %>
        <%= f.button :Enviar, class: 'boton' %>
      <% end %>
    </div>
  </div>

</section>