<section class="formulario">
  <div class="titulo">Comienza aquí.</div>
    <%= form_for @contact_model, :url => contact_send_mail_path, :method => :post do |f| %>
        <%= f.text_field :name, class: 'campo', placeholder: "Nombre" %>
        <%= f.text_field  :email,class: 'campo', placeholder: "Correo elecrónico" %>
        <%= f.text_field  :subject, class: 'campo', placeholder: "Teléfono" %>
        <%= f.text_field  :subject, class: 'campo', placeholder: "Teléfono secundario" %>
        <%= f.text_area  :message, class: 'campo area', placeholder: "Dirección" %>
        <%= f.hidden_field :nickname %>
        <%= f.button :Enviar, class: 'boton' %>
      <% end %>
</section>

