<%= content_for :title, "Anuncios" %>

<% content_for :header_content do %>
<h1><strong>Todos los Anuncios</strong></h1>
<% end %>

<%= link_to new_announcement_path, class: 'c4-button-success' do %>
  Agregar nuevo
<% end %>
<div class="c4-list-collection">
  <% if @cases.empty? %>
    <div class="no-content">
      <span class="icon-error"></span>
      <div>Sin contenido</div>
    </div>
  <% end %>
  <% @cases.each do |c| %>
  <div class="c4-list-cell">
    <div class="row top-row">
      <div class="nine columns">
        <div class="title">
          <%= '<span class="icon-view_carousel"></span>'.html_safe if c.featured %>
          <%= c.title %>
        </div>
      </div>
      <div class="three columns">
        <div class="date">
          <%= c.created_at.strftime('%d/%m/%Y') %>
        </div>
      </div>
    </div>
    <div class="row">
    <div class="four columns">
      <div class="thumbnail" style="background-image: url(<%= c.image.url(:thumb) %>)"></div>
    </div>
      <div class="eight columns">
        <div class="description">
          <%= c.link %>
        </div>
        <div class="row buttons-container">
        <%= link_to edit_announcement_path(c), class:'c4-button-primary' do %>
          <span class="icon-edit"></span>
        <% end %>
          <%= link_to c, method: :delete, data: { confirm: 'Esta acción no puede deshacerse. ¿Está seguro que desea borrar este elemento?'}, class:'c4-button-warning' do %>
            <span class="icon-delete"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

