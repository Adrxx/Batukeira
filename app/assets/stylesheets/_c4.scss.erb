.palette
{
  position:fixed;
  z-index: 1000;
  //opacity: 0.1;

  border: solid 2px white;
  
  &:hover > .p-color
  {
    opacity: 1.0;
    height: 35px;
    width: 35px;
  }

  .p-color 
  {
    opacity: 0.4;

    @include transition-duration(0.2s);
    @include transition-property(all);
    height: 15px;
    width: 15px;
    float: left;

    @for $i from 1 through length($palette) {
      &:nth-child(#{$i}) {
        background-color: nth($palette, $i);
        @if ($i - 1) % 5 == 0 
        {
          clear: both;
        }
      }
    }
  } 
}


